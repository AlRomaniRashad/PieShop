@model IEnumerable<Category>

<li class="nav-item dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="nav-link dropdown-toggle" data-toggle="dropdown" id="navbarDropdown"
       role="button" aria-haspopup="true" aria-expanded="false"
       style="color:white;">Pies<b class="caret"></b>
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var category in Model)
        {
            <a class="dropdown-item" asp-controller="Pie" asp-action="List"
                asp-route-category="@category.CategoryName">@category.CategoryName</a>
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-controller="Pie" asp-action="List" asp-route-Category="">View all pies</a>
    </div>
</li>

